---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const baseHeroImage = "/og-image.png";

// Props 타입을 확장하여 홈페이지와 블로그 포스트를 모두 수용할 수 있도록 함
type Props = {
	title: string;
	description: string;
	heroImage?: string;
	pubDate?: Date;
	updatedDate?: Date;
};

const { title, description, heroImage } = Astro.props;

// 웹사이트 구조화된 데이터 생성
const websiteSchema = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": SITE_TITLE,
	"url": Astro.site?.toString(),
	"potentialAction": {
		"@type": "SearchAction",
		"target": {
			"@type": "EntryPoint",
			"urlTemplate": `${Astro.site}search?q={search_term_string}`
		},
		"query-input": "required name=search_term_string"
	}
};
---

<html lang="ko">
	<head>
		<BaseHead title={title} description={description} image={heroImage ?? baseHeroImage} />
		<style>
			body {
				display: flex;
				flex-direction: column;
				min-height: 100vh;
			}
			main {
				flex: 1;
				width: calc(100% - 2em);
				max-width: 960px;
				margin: 0 auto;
			}
		</style>
		<!-- Schema.org 구조화된 데이터 -->
		<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

