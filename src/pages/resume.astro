		// PDF 저장 버튼 기능
		if (savePdfBtn && pdfStatus) {
			savePdfBtn.addEventListener('click', async function() {
				try {
					// PDF 저장 버튼 숨기고 로딩 표시
					savePdfBtn.style.display = 'none';
					if (printBtn) printBtn.style.display = 'none';
					pdfStatus.style.display = 'flex';
					
					// 이력서 컨테이너에 컴팩트 클래스 추가
					const resumeContainer = document.querySelector('.resume-container');
					if (resumeContainer) {
						resumeContainer.classList.add('print-compact');
						
						// 이미지 로딩 완료 대기
						await Promise.all(
							Array.from(resumeContainer.querySelectorAll('img'))
								.filter(img => !img.complete)
								.map(img => new Promise(resolve => {
									img.onload = img.onerror = resolve;
								}))
						);
						
						// PDF 옵션 설정
						const opt = {
							margin: [5, 5, 5, 5], // 상하좌우 마진 최소화
							filename: '심상현_이력서.pdf',
