---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { SITE_TITLE } from '../consts';

// Get all portfolio entries
const portfolioEntries = await getCollection('portfolio');
---

<BaseLayout title={`Portfolio | ${SITE_TITLE}`} description="My portfolio showcasing various projects and work">
	<main>
		<section>
			<h1>Portfolio</h1>
			<p>
				Welcome to my portfolio. Here you'll find a collection of my projects and work.
				Click on any project to see more details.
			</p>
		</section>

		<section class="portfolio-grid">
			{
				portfolioEntries.map(entry => (
					<a href={`/portfolio/${entry.id}`} class="portfolio-item">
						<div class="portfolio-card">
							{entry.data.heroImage && (
								<img 
									src={entry.data.heroImage} 
									alt={`Image for ${entry.data.title}`} 
									class="portfolio-image"
								/>
							)}
							<div class="portfolio-content">
								<h2>{entry.data.title}</h2>
								<p>{entry.data.description}</p>
								<div class="tags">
									{entry.data.tags && entry.data.tags.map((tag: string) => (
										<span class="tag">{tag}</span>
									))}
								</div>
							</div>
						</div>
					</a>
				))
			}
		</section>
	</main>
</BaseLayout>

<style>
	main {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.portfolio-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.portfolio-item {
		text-decoration: none;
		color: inherit;
		transition: transform 0.3s ease;
	}

	.portfolio-item:hover {
		transform: translateY(-5px);
	}

	.portfolio-card {
		background: white;
		border-radius: 0.5rem;
		overflow: hidden;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		transition: box-shadow 0.3s ease;
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.portfolio-card:hover {
		box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
	}

	.portfolio-image {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	.portfolio-content {
		padding: 1.5rem;
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.portfolio-content h2 {
		font-size: 1.5rem;
		margin: 0 0 0.5rem 0;
	}

	.portfolio-content p {
		margin: 0 0 1rem 0;
		flex: 1;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: auto;
	}

	.tag {
		background: #f0f0f0;
		padding: 0.3rem 0.6rem;
		border-radius: 0.3rem;
		font-size: 0.8rem;
		font-weight: 500;
	}

	@media (max-width: 768px) {
		.portfolio-grid {
			grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		}
	}
</style>
